{
  "name": "@egoist/vue-emotion",
  "version": "0.5.0",
  "description": "Seamlessly use emotion (CSS-in-JS) with Vue.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "url": "egoist/vue-emotion",
    "type": "git"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist/index.js",
    "dist/index.esm.js",
    "dist/server.js",
    "/server.js"
  ],
  "scripts": {
    "test": "npm run lint && echo 'no tests!'",
    "lint": "xo",
    "prepublishOnly": "npm run build",
    "build": "bili src/index.js,src/server.js --format cjs,esm --minimal",
    "example": "poi -s",
    "ssr-example": "saber ssr-example",
    "build:example": "poi --prod",
    "toc": "markdown-toc -i README.md"
  },
  "author": "EGOIST <0x142857@gmail.com>",
  "license": "MIT",
  "xo": {
    "extends": [
      "rem"
    ],
    "ignores": [
      "**/example/**"
    ],
    "envs": [
      "browser"
    ],
    "rules": {
      "camelcase": "off"
    }
  },
  "dependencies": {
    "@emotion/cache": "^11.1.3",
    "@emotion/serialize": "^1.0.0",
    "@emotion/utils": "^1.0.0",
    "clsx": "^1.1.1",
    "create-emotion-server": "^11.0.0"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.2.0",
    "bili": "^5.0.5",
    "eslint-config-rem": "^4.0.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "markdown-toc": "^1.2.0",
    "poi": "^12.10.3",
    "saber": "^0.11.7",
    "vue": "^2.6.12",
    "vue-template-compiler": "^2.6.12",
    "xo": "^0.38.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "README.md": [
      "yarn markdown-toc -i",
      "git add"
    ],
    "src/*.js": [
      "xo --fix",
      "git add"
    ]
  }
}
